<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="376dp"
        android:layout_height="127dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="376dp"
        android:text="Kedua ada aksi pengeroyokan di tribune ekonomi Stadion Kanjuruhan, Malang.  Namun untungnya petugas keamanan segera sigap dalam pengamanan.  Selanjutnya insiden masuknya oknum suporter saat babak pertama selesai.  Saat pemain cadangan Persebaya sedang melakukan pemanasan, kemudian oknum suporter datang dan menantang kiper Alfonsius Kelvan. "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="377dp"
        android:layout_height="167dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="255dp"
        android:text="Keempat, pada akhir laga beberapa oknum suporter masuk ke dalam lapangan dan melakukan provokasi dengan menyobek bendera lambang tim berjulukan Bajul Ijo.    Kemudian insiden lainnya masih terlihat ada lemparan botol yang dilakukan oleh oknum suporter saat para pemain dan ofisial Persebaya masuk ke ruang ganti.  Namun dengan hasil kemenangan 1-0 ini, tim berjulukan Singo Edan berhasil naik ke posisi 11 klasemen sementara Liga 1 2018dengan perolehan 31 poin. "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="148dp"
        android:layout_marginRight="148dp"
        android:layout_marginBottom="124dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</android.support.constraint.ConstraintLayout>